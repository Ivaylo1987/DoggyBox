@using DoggyBox.Web.ViewModels.Profile
@model ProfileDetailsViewModel

<br />
<div class="row">
    <div class="col-md-offset-2 col-md-8">
        <div class="bs-component">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">My Profile</h3>
                </div>
                <div class="panel-body">
                    @if (Model.ImageId != null)
                    {
                        <img src="@Url.Action("GetImage", "Profile", new { id = Model.ImageId })" class="img-responsive center-block" />
                    }
                    else
                    {
                        <img src="~/Content/Images/defaultProfilePhoto.jpg" class="img-responsive center-block" />
                    }
                    <hr />

                    <ul class="list-group">
                        <li class="list-group-item">
                            Username: <strong>@Model.UserName</strong>
                        </li>
                        <li class="list-group-item">
                            Email: <strong>@Model.Email</strong>
                        </li>
                        <li class="list-group-item">
                            First Name: <strong>@(Model.FirstName != null ? Model.FirstName : "-")</strong>
                        </li>
                        <li class="list-group-item">
                            Last Name: <strong>@(Model.LastName != null ? Model.LastName : "-")</strong>
                        <li class="list-group-item">
                            Phone Number: <strong>@(Model.ContactPhone != null ? Model.ContactPhone : "-")</strong>
                        </li>

                        @if (Model.Dogs.Count > 0)
                        {
                            <li class="list-group-item">
                                @foreach (var dog in Model.Dogs)
                                {
                                    <span>Goggy Name:</span> <strong>@dog.Name</strong> <span>Breed: </span> <strong>@dog.Breed</strong>
                                }
                            </li>
                        }

                    </ul>
                </div>
            </div>
            <a class="btn btn-success btn-block" href="/Profile/Edit">Edit Profile</a>
            <a class="btn btn-default btn-block" href="/Account/Manage">Change Password</a>
        </div>
    </div>
</div>
